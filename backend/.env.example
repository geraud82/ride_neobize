# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and replace all placeholder values with actual values
# Never commit the actual .env file to version control
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port number for the backend server
PORT=3008

# Environment mode (development, production, staging)
NODE_ENV=development

# Application name and version (optional but useful for logging)
APP_NAME=Neobize Ride Service
APP_VERSION=1.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend URL for CORS policy
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Full database connection string
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/your_database_name

# Individual database connection parameters (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_secure_password

# Database connection pool settings (optional)
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_CONNECTION_TIMEOUT=60000

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =============================================================================
# SMTP server configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Gmail account credentials
# Note: Use App Password, not your regular Gmail password
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Email addresses
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=contact@neobize.com

# Email security settings
EMAIL_SECURE=false
EMAIL_TLS=true

# =============================================================================
# TWILIO CONFIGURATION (WhatsApp Business API)
# =============================================================================
# Twilio Account credentials
# Find these at: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_32_character_auth_token

# WhatsApp phone numbers (must be verified with Twilio)
# Format: whatsapp:+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890
WHATSAPP_TO=whatsapp:+1234567890

# Twilio Webhook URL (for receiving messages)
# TWILIO_WEBHOOK_URL=https://yourdomain.com/webhook/twilio

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for token signing (generate a strong random string)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Session secret for express-session
SESSION_SECRET=your_session_secret_here

# API rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (optional)
# LOG_FILE=logs/app.log

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis configuration (for caching/sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# AWS S3 configuration (for file uploads)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Google Maps API (for location services)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
# Enable debug mode
DEBUG=false

# Test database URL (for running tests)
# TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# Mock external services in development
# MOCK_TWILIO=true
# MOCK_EMAIL=true
